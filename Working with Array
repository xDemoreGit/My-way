#include <iostream>

using namespace std;



                           //Работа с массивом: Вывод всего массива на экран через цикл
        

    float nums[3] = { 5, 10, 15 };    //Создание массива с и менем nums и заданными значениями
    for (int i = 0; i < 3; i++) {    //Цикл, что позволит перебрать массив по одному элементу
         cout << nums[i] << endl;    // вывод на экран значчения nums, которое благодаря циклу пройдется по всему массиву и выведет нам 5, 10, 15

    }



                           //Работа с массивом: Заполнение массива пользователем + Сумма этих значений + Поиск наименьшего значения.


    float numbers[5];                 //Создание пустого массива.
    for (int i = 0; i < 5; i++) {    // Цикл для перебирания массива по одному элементу

        cout << "Enter Numbers " << i << ":";    //Просим пользователя ввести данные в массив
        cin >> numbers[i];
    }

    float summa = 0;                  //Создаем переменную для будушей суммы
    float min = numbers[0];           //Создаем переменную для будущего наименьшего значения
    for (int i = 0; i < 5; i++) {     //Цикл для перебирания массива по одному элементу
        summa += numbers[i];          //Прибавляем к переменной summa значение введенное пользователем
        if (numbers[i] < min)         //Условие, в котором мы говорим, что если текущее знвачение numbers[i] меньше чем значение перменной min то передать это значение min.
            min = numbers[i];
       
    }
    cout << "Summa esli che: " << summa << endl;    //Вывод обоих резултатов на экран
    cout << "Minimal esli che: " << min << endl;



    for (int i = 0; i < 5; i++) {                   //Перечисление значений массива в столбик      
        cout << "Numbers: " << numbers[i] << endl;
    }



                         //Многомерные массивы + Вывод всего массива через цикл.

int matrix[3][2] = {    //Создаем многомерный массив

    {3,5},
    {10,12},
    {8,6}
};
for (int i = 0; i < 3; i++) {       // Первый цикл для пересчета младших массивов
    for (int j = 0; j < 2; j++) {   // Второй цикл для пересчета значений в каждом из младших массивов
        cout << matrix[i][j] << endl;  //Вывод на экран всех значений из всех массивов в столбик.
    }
}



   
