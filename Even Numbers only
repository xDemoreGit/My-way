//Простенький цикл с промежуточным условием

for (int i = 1; i < 15; i++) { 
	if (i == 10)
		break;

 //Спососб использовать в цикле только нечетные числа

	if (i % 2 == 0)  	       //если при делении переменной на два мы получачем ноль
		continue;             //То пропустить эту итерацию и запустить цикл снова
	cout << "pazalasta: " << i << endl;  //Результатом будет то, что нам выведет все числа из массима кроме тех, что делятся на 2 без остатка (тоесть нечетные)
}
