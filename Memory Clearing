




int *nums = new int[3];    //Выделение памяти и указатель
nums[0] = 45;              //значение для 1 ячейки массива
cout << nums[0] << endl;   //вывод на экран, показывающий значение 45
delete[] nums;              //очистка памяти
cout << "pusto: " << nums[0] << endl;    //Вывод на экран показывающий 0 (так как память очистилась и значчение стерлось)
